author = 'Ryan McKenzie'
cpp = 20
description = 'bethesda archives meet c++'
extra_files = [
	'@DOCS_DIR@/images/banner_small.png'
]
github = 'Ryan-rsm-McKenzie/bsa'
license = [ 'MIT', 'https://github.com/Ryan-rsm-McKenzie/bsa/blob/master/LICENSE' ]
name = 'bsa'
navbar = [ 'classes', 'namespaces' ]

[autolinks]
'binary_io::any_ostream' = 'https://github.com/Ryan-rsm-McKenzie/binary_io'
'binary_io::buffer_exhausted' = 'https://github.com/Ryan-rsm-McKenzie/binary_io'
'std::strong_ordering' = 'https://en.cppreference.com/w/cpp/utility/compare/strong_ordering'

[badges]
'a-architecture' = [
	'https://img.shields.io/static/v1?label=architecture&message=x64&color=dimgray&style=flat-square',
	'#'
]
'a-platform' = [
	'https://img.shields.io/static/v1?label=platform&message=windows%20|%20linux&color=dimgray&style=flat-square',
	'#'
]
'build' = [
	'https://img.shields.io/github/workflow/status/Ryan-rsm-McKenzie/bsa/Main%20CI?logo=github&style=flat-square',
	'https://github.com/Ryan-rsm-McKenzie/bsa/actions/workflows/main_ci.yml'
]
'codecov' = [
	'https://img.shields.io/codecov/c/github/Ryan-rsm-McKenzie/bsa?logo=codecov&logoColor=white&style=flat-square',
	'https://app.codecov.io/gh/Ryan-rsm-McKenzie/bsa'
]

[images]
paths = [ '@DOCS_DIR@/images' ]

[macros]
'BSA_VISIBLE' = ''

[sources]
extract_all = true
paths = [ '@DOCS_DIR@/index.doxy' ]
recursive_paths = [ '@INCLUDE_DIR@' ]
strip_paths = [ '@INCLUDE_DIR@' ]

[warnings]
treat_as_errors = true
